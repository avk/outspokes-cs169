<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
          "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <%= javascript_include_tag 'jquery-1.3.2', 'qunit/testrunner' %>
    <%= stylesheet_link_tag 'qunit/testsuite' %>
  </head>
  <body>
    <h1><%= @title || "QUnit Test: #{controller.action_name}" %></h1>
    <h2 id="banner"></h2>
    <h2 id="userAgent"></h2>

    <ol id="tests"></ol>

    <div id="main"></div>

  </body>

  <%= yield %>

  <% javascript_tag do %>
    $(document).ready(function(){
    <%= yield :document_ready %>
    });
  <% end %>
</html>
