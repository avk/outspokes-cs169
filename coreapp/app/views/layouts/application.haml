!!! Strict
%html
  %head
    %meta{'http-equiv' => "Content-Type", :content => "text/html"}
    %title 
      Outspokes - 
      = @title
    = stylesheet_link_tag 'reset-min'
    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'main'
    = javascript_include_tag :defaults
    = javascript_include_tag 'accordion'

%body
  #header
    .inside
      #branding
        = link_to image_tag('borderless-logo-beta.png', :alt => "Outspokes"), root_url
      #login_bar= render :partial => '/accounts/account_bar'  
  
  #main_content
    .inside
      - if flash[:notice]
        #flash_notice
          = flash[:notice]
      - if flash[:error]
        #flash_error
          = flash[:error]
      - if flash[:warning]
        #flash_warning
          = flash[:warning]
    
      = yield 

  #footer
    %p 
      %a{:href => "/" } Home
      \-
      %a{:href => "/faq" } FAQ
      \- 
      %a{:href => "/about" } About
      \-
      %a{:href => "/contact" } Contact Us
    %p &copy; 2009 Outspokes
      
