!!! Strict
%html
  %head
    %meta{'http-equiv' => "Content-Type", :content => "text/html"}
    %title 
      Outspokes - 
      = @title
    = stylesheet_link_tag 'reset-min'
    = stylesheet_link_tag 'main'
    = javascript_include_tag :defaults
    = javascript_include_tag 'accordion'

%body
  #header
    .inside
      #branding
        = link_to image_tag('borderless-logo.png', :alt => "Outspokes"), root_url
      #login_bar= render :partial => '/accounts/account_bar'  
  
  #main_content
    .inside
      #flash_notice
        = flash[:notice]
      #flash_error
        = flash[:error]
      #flash_warning
        = flash[:warning]
    
      = yield 

  #footer
    %p &copy; 2009 Outspokes  
