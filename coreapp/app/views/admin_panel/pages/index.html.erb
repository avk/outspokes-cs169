<h1 id="pages_message">
  People you've invited have commented on 
  <strong id="page_count"><%= pluralize(@pages.size, 'page') %></strong>.
</h1>

<%- unless @pages.empty? -%>
  <ol id="site_pages">
  <%- @pages.each do |page| -%>
    <li class="site_page">
      <div class="remove_page">
        <%= link_to 'x', 
            admin_panel_delete_site_page_path(@site, page), 
            :confirm => "This will remove all of the feedback on this page. Are you sure?", 
            :method => :delete %>
      </div>
      <div class="page_details">
        <%= link_to URI.parse(page.url).path, page.url, :class => 'page_url' %>
        <span class="latest_feedback"> 
          <%= relative_date page.latest_feedback %>
          @
          <%= prettier_time Time.parse(page.latest_feedback) %>
        </span>
      </div>
    </li>
  <% end -%>
  </ol>
<% end -%>