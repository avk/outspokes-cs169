<div class="right_message subliminal_yet_loud">
  It's okay, we all forget things.
</div>

<h1>Reset your password</h1>

<% form_tag reset_password_path, :method => 'put' do %>
  <p>
    <%= label_tag 'email', nil, :class => 'wide_left' %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= submit_tag 'Reset', :class => 'submit' %>
  </p>
<% end %>
