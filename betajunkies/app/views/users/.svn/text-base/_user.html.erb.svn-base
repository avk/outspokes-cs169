<div id="login_bar">
 <% if @current_user %> 
 <div>Logged in as: 
 <%= @current_user.login %> 
 <em><%= link_to "(Logout)", session_path, :method => :delete %></em></div>
 <% else %> 
 <% form_tag session_path do -%>
	<div style="float: left; text-align: right;"><label for="login">Username:</label>
	<%= text_field_tag 'login' %><br />

	<label for="password">Password:</label>
	<%= password_field_tag 'password' %></div>

	<!-- Uncomment this if you want this functionality
	<p><label for="remember_me">Remember me:</label>
	<%= check_box_tag 'remember_me' %></p>
	-->

	<div style="float: right"><%= submit_tag 'Log in' %><br /> <%= link_to 'Register', new_user_path %></div>
	<% end -%>

 <!--<em>Not logged in.</em> 
 <%= link_to 'Login', new_session_path %> -->
 <% end %> 
</div>