<div class="project">
	<h2><%=h @project.name %></h2>  - <a href="http://<%=h @project.link %>"><%=h @project.link %></a>
	<p>
		<%= link_to 'Back to Project Details', project_path(@project) %><br />
		<%= link_to 'Back to Projects List', projects_path %>
	</p>
	<p>
  	<b>User:</b>
  	<%=h @project.user.login %>
	</p>
	<p>
  	<b>Summary:</b>
  	<%=h @project.summary %>
	</p>
	<div class="comments">
		<div class="commentsheader">Comments:</div>
		<%= render :partial => 'comment',
							 :collection => @project.comments %>
	</div>

	<% if @current_user %>
		<% form_for([@project, @comment]) do |f| %>
		  <%= f.error_messages %>
			<label>New Comment</label>
		    <%= f.text_area :content %>
	
			<p>
				<%= f.hidden_field :project_id %>
				<%= f.hidden_field :user_id %>
				<%= f.hidden_field :date %>
			</p>
		
		  <p>
		    <%= f.submit "Create" %>
		  </p>
		<% end %>
	<% else %>
		<p>Login to post or reply to comments!</p>
	<% end %>
</div>
<div class="frame">
	<iframe class="frame" id="ifrm" height="100%" width="100%" src="http://<%=h @project.link %>"></iframe>
</div>
